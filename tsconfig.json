{
  "compilerOptions": {
    "target": "es5",
    "outFile": "dist/index.js",
    "module": "amd",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },

  "types": ["node"],
  "exclude": ["node_modules", "dist"]
}
